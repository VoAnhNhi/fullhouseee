</head>
<body>
	
	<div class="limiter">
		<div class="container-login100">
			<div class="wrap-login100 p-l-55 p-r-55 p-t-65 p-b-50">
				<form class="login100-form validate-form" onsubmit="return check();" action="fullhouseee.herokuapp.com/orders-of-day" method="POST">
					<span class="login100-form-title p-b-33">
						Đăng nhập
					</span>

					<div class="wrap-input100 validate-input" >
						<input class="input100" id="username" type="text" name="username" placeholder="Tên đăng nhập" onblur="return checkName();">
						<i  id="tbName"></i>
						
					</div>
					
					<div class="wrap-input100 rs1 validate-input" >
						<input class="input100" id="password" type="password" name="pass" placeholder="Mật khẩu" onblur="return checkPass();">
						<i  id="tbPass"></i>
					</div>
					

					<div class="container-login100-form-btn m-t-20">
						
						<input type="submit" value="Đăng nhập" class="login100-form-btn">
					</div>

					<div class="text-center p-t-45 p-b-4">
						<span class="txt1">
							Quên 
						</span>

						<a href="#" class="txt2 hov1">
							 Mật khẩu?
						</a>
					</div>
				</form>
			</div>
		</div>
	</div>
	

	
<!--===============================================================================================-->
	<script src="./js/jquery-3.2.1.min.js"></script>
<!--===============================================================================================-->
	<script src="./js/animsition.min.js"></script>
<!--===============================================================================================-->
	<script src="./js/popper.js"></script>
	<script src="./js/bootstrap.min.js"></script>
<!--===============================================================================================-->
	<script src="./js/select2.min.js"></script>
<!--===============================================================================================-->
	<script src="./js/moment.min.js"></script>
	<script src="./js/daterangepicker.js"></script>
<!--===============================================================================================-->
	<script src="./js/countdowntime.js"></script>
<!--===============================================================================================-->
	
	<script>
		function check(){
    if(checkName()== false || checkPass()== false){
        return false;
    }
    return true;
}
function checkName(){
	var data = document.getElementById("username").value;
	if(data == "" ){
		tbName.innerText = "Phải nhập, không được để trống";
		return false;
	}
	tbName.innerText = "";
	return true;
}
function checkPass(){
	var data = document.getElementById("password").value;
	if(data == "" ){
		tbPass.innerText = "Phải nhập, không được để trống";
		return false;
	}
	tbPass.innerText = "";
	return true;
}
	</script>
</body>
</html>